{
	"name": "@biggerball/java-jar-mcp",
	"version": "0.0.2",
	"description": "MCP server for Java Maven projects to provide jar class definitions to AI",
	"license": "MIT",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"java-jar-mcp": "dist/index.js"
	},
	"files": [
		"dist",
		"package.json",
		"README.md"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/biggerball/java-jar-mcp.git"
	},
	"publishConfig": {
