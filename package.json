		"test:watch": "node --test --watch dist/**/*.test.js"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.0.0",
		"pom-parser": "^1.1.1",
		"yauzl": "^2.10.0",
		"adm-zip": "^0.5.10",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@types/node": "^20.0.0",
		"@types/yauzl": "^2.10.3",
		"typescript": "^5.0.0"
	}
}
